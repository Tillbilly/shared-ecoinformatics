									<webResources>
										<resource>
											<directory>${basedir}/deploy/profiles/qa</directory>
											<includes>
												<include>objectstore-context.xml</include>
											</includes>
											<targetPath>WEB-INF/spring/appServlet</targetPath>
										</resource>
									</webResources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
