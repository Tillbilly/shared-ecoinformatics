									<target>
									    <echo>Copying shared-web-qa.properties and shared-postgres-qa.properties to output folder</echo>
										<delete file="${project.build.outputDirectory}/shared-web.properties" />
										<copy file="deploy/profiles/qa/shared-web-qa.properties" tofile="${project.build.outputDirectory}/shared-web.properties" />
										<delete file="${project.build.outputDirectory}/shared-postgres.properties" />
										<copy file="deploy/profiles/qa/shared-postgres-qa.properties" tofile="${project.build.outputDirectory}/shared-postgres.properties" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.4</version>
